{
  "name": "almacen-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.js",
  "homepage": "./",
  "description": "El Almacén de los Recuerdos - Archivo personal con IA para crear legados digitales",
  "author": "El Almacén de los Recuerdos Team",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"pnpm dev\" \"wait-on http://localhost:5175 && cross-env NODE_ENV=development electron .\"",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:5175 && cross-env NODE_ENV=development electron .\"",
    "build": "pnpm install && rm -rf node_modules/.vite-temp && tsc -b && vite build",
    "build:analyze": "ANALYZE=true pnpm build",
    "analyze": "pnpm build:analyze",
    "analyze:treemap": "ANALYZE=true pnpm build && open dist/stats.html",
    "analyze:size": "pnpm build && npx bundlesize",
    "analyze:deps": "npx depcheck",
    "analyze:all": "pnpm analyze:deps && pnpm analyze:treemap",
    "bundle-analyzer": "npx webpack-bundle-analyzer dist/assets/*.js",
    "monitor:bundle": "node scripts/bundle-monitor.js analyze",
    "monitor:size": "node scripts/bundle-monitor.js check",
    "monitor:full": "node scripts/bundle-monitor.js full",
    "build:electron": "pnpm build && electron-builder",
    "dist": "pnpm build && electron-builder --publish=never",
    "pack": "pnpm build && electron-builder --dir",
    "start:electron": "cross-env NODE_ENV=production electron .",
    "lint": "pnpm install && eslint .",
    "preview": "pnpm install && vite preview"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/crypto-js": "^4.2.2",
    "@types/react-speech-recognition": "^3.9.6",
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "fuse.js": "^7.1.0",
    "input-otp": "^1.4.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-day-picker": "9.9.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.1",
    "react-speech-recognition": "^4.0.1",
    "recharts": "^3.2.0",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^4.1.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.3",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "depcheck": "^1.4.7",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^5.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "wait-on": "^8.0.5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "build": {
    "appId": "com.almacenrecuerdos.app",
    "productName": "El Almacén de los Recuerdos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.lifestyle",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "publish": null
  }
}
